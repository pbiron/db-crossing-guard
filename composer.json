{
	"name": "shc/db-crossing-guard",
    "description": "Display various indicators about whether the DB connection is over SSL or not.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
            "name": "Paul V. Biron",
            "email": "paul@sparrowhawkcomputing.com",
            "homepage": "https://sparrowhawkcomputing.com",
            "role": "Developer"
        }
    ],
    "config" : {
		"sort-packages" : true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"minimum-stability" : "dev",
	"extra": {
		"wordpress-install-dir": "tests/wp"
	},
	"autoload": {
		"classmap": [
			"plugin.php",
			"includes"
		]
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "dev-main",
		"phpcompatibility/phpcompatibility-wp": "*",
		"wp-coding-standards/wpcs": "^2.3.0",
		"johnpbloch/wordpress": "*",
		"phpunit/phpunit": "^5.7 || ^6.5 || ^7.5",
		"wp-phpunit/wp-phpunit": "*"
	},
	"require": {}
}
